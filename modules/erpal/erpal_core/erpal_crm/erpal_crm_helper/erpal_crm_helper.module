  switch ($path) {    
    case 'admin/structure/taxonomy/%':
      $vocab_name = $arg[3];      
      if ($vocab_name == 'activity_status_terms')
        _erpal_basic_helper_warn_semantic_not_covered_by_terms($vocab_name, 'field_simple_process_status');     
